{
  "manifest_version": 3,
  "name": "Valora - Simple Currency Converter",
  "version": "1.0",
  "description": "Convert currencies quickly and easily using real-time exchange rates.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "96": "icon-96.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "96": "icon-96.png"
  },
  "host_permissions": [
    "https://hexarate.paikama.co/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["kofi_button.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "valora@temp-email.dev"
    }
  }
}